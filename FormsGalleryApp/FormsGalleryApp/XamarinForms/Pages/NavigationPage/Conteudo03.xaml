<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Conteúdo 03"
             x:Class="FormsGalleryApp.XamarinForms.Pages.NavigationPage.Conteudo03"
             NavigationPage.HasBackButton="False">

    <ContentPage.Content>
        <StackLayout>


            <Button Text="Inserir Página na Pilha" Clicked="InsertPage"/>
            <Button Text="Remover Página na Pilha" Clicked="RemovePage"/>

            <Label Text="Página de Conteúdo 01"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Button Text="Voltar" Clicked="PopAsync"/>
            <Button Text="Voltar para o início" Clicked="BackToStart"/>

        </StackLayout>
    </ContentPage.Content>

</ContentPage>